<!--About Me の部分テンプレート-->
<%= render 'public/customers/about_me', customer: @customer %>

<!--画面右側の Posts の部分の記述↓-->
   <div class="col-md-8 offset-md-1">
     <h2>♥ Post Detail ♥</h2>

    <table class="table table-hover table-inverse">

       <tr>
         <td>
           <%= link_to public_customer_path(@post.customer.id) do%>
             <% if @customer.image.attached? %>
               <%= image_tag @customer.get_image(100,100) %>
  　          <% else %>
               <%= image_tag 'no_image.jpg', size: "100x100" %>
             <% end %>
           <%end%>
         <td>
           <%= @post.oshi_name %>
          </td>
         <td>
           <%= link_to @post.post_name, public_customer_path(@post.customer.id) %>
         </td>
         <td>
           <%= @post.post_content %>
         </td>
         <!--イイねの部分テンプレート-->
         <td>
           <%= render "public/favorites/favorite", post: @post %>
         </td>

         <% if @customer.id == current_customer.id %>
         <td><%= link_to "Edit", edit_public_post_path(@post.id), class: 'btn btn-sm btn-success edit_book_58920' %></td>
         <td><%= link_to 'Destroy', public_post_path(@post.id), method: :delete,  class: 'btn btn-sm btn-danger destroy_book_58920', "data-confirm" => "本当に消しますか？"%></td>
         <%end%>

       </tr>
    </table>

    <table>
      <tbody>
        <% @post.post_comments.each do |post_comment| %>
          <tr>
            <td>
              <%= link_to public_customer_path(post_comment.customer) do %>
                <%= image_tag post_comment.customer.get_image(100,100) %><br>
                <%= post_comment.customer.name %>
              <% end %>
            </td>
            <td><%= post_comment.comment %></td>
            <td>
              <% if post_comment.customer == current_customer %>
                <%= link_to "Destroy", public_post_post_comment_path(id: post_comment.id, post_id: @post.id), method: :delete, class: "btn btn-danger pull-right" %>
              <% end %>
            </td>
           </tr>
         <% end %>
      </tbody>
    </table>

    <table>
      <div>
        <%= form_with url: public_post_post_comments_path(@post.id) do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
     </table>
   </div>

 </div>
 </div>
