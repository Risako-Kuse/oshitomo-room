<!--イイねの部分テンプレート-->

<% if book.favorited_by?(current_customers) %>
  <%= link_to public_favorites_path(post), method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to public_favorites_path(post), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.favorites.count %> いいね
  <% end %>
<% end %>