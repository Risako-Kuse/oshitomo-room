<div class="container">
  <div class="row">
    <div class="col">
      <h2>募集投稿一覧</h2>
        <table class="table">
          <thead>
            <tr>
              <th>ユーザー名</th>
              <th>推し</th>
              <th>募集名</th>
              <th>募集内容</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <th>
                  <%= link_to post.customer.name, admin_customer_path(post.customer.id) %>
                </th>
                <th>
                  <%= post.oshi_name %>
                </th>
                <th>
                  <%= post.post_name %>
                </th>
                <th>
                  <%= post.post_content %>
                </th>
                <th>
                  <%= link_to 'Destroy', admin_post_path(post.id), method: :delete,  class: 'btn btn-sm btn-danger destroy_book_58920', "data-confirm" => "本当に消しますか？"%>
                </th>
              </tr>
            <% end %>
          </tbody>
        </table>

        </div>
    </div>
</div>